{
    "version": 2,
    "builds": [{
            "src": "src/main.ts",
            "use": "@vercel/node"
        },
        {
            "src": "src/task/**/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "src/auth/**/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [{
            "src": "/api/task/(.*)",
            "dest": "src/task/$1.ts",
            "methods": ["GET", "POST", "PATCH", "DELETE"]
        },
        {
            "src": "/api/auth/(.*)",
            "dest": "src/auth/$1.ts",
            "methods": ["GET", "POST", "PATCH", "DELETE"]
        },
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": ["GET", "POST", "PATCH", "DELETE"]
        }
    ]
}